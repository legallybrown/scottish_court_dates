<div class="col">
</div>
<div class="col-6">
  <%= form_tag({:controller=>"home", :action=>"date_calculator"}, html: {class: "date_picker"}, method: :post) do %>
    <p>
      <%= label_tag "Select Court" %>
      <%= select_tag "court", "<option>Court of Session</option><option>Sheriff Court</option>".html_safe %>
    </p>
    <p>
      <%= label_tag "Select Court Action Type" %>
      <%= select_tag "type", "<option>Intellectual Property</option><option>Commercial</option><option>Ordinary</option><option>Personal Injury</option><option>Petition</option><option>Family</option><option>Inner House</option><option>Sheriff Appeal Court</option>".html_safe %>
    </p>
    <p>
      <%= label_tag "Date Court Action Will be Served" %>
      <%= date_field_tag :date, Date.today %>
    </p>
    <p>
      <%= submit_tag 'Calculate Dates', name: nil %>
    </p>
  <% end %>
</div>
